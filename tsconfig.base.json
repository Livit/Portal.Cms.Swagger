{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "allowJs": true,
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es2018"],
    "declaration": true,
    "skipLibCheck": true,
  }
}
